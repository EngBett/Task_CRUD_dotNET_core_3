@model MyTask
<h1>Add task</h1>
<a asp-controller="MyTask" asp-action="Index">Back</a>


<div style="margin-top: 20px">
    
    <form asp-action="Create" method="post">

        <label asp-for="Name"></label><br/>
        <input asp-for="Name"/><br/>
        <span asp-validation-for="Name" style="color: red"></span><br/>
        
        <label asp-for="Description"></label><br/>
        <textarea asp-for="Description"></textarea><br/>
        <span asp-validation-for="Description" style="color: red"></span><br/><br/>

        <button type="submit">Add</button>

    </form>
    
</div>
