@model MyTask

<h1>Add task</h1>
<a asp-controller="MyTask" asp-action="Index">Back</a>


<div style="margin-top: 20px">
    
    <form asp-action="Update"  method="post">

        <input asp-for="MyTaskId" value="@Model.MyTaskId" style="display: none;"/>
        
        <label asp-for="Name"></label><br/>
        <input asp-for="Name" value="@Model.Name"/><br/>
        <span asp-validation-for="Name" style="color: red"></span><br/>
        
        <label asp-for="Description"></label><br/>
        <textarea asp-for="Description">@Model.Description</textarea><br/>
        <span asp-validation-for="Description" style="color: red"></span><br/><br/>

        <button type="submit">Update</button>

    </form>
    
</div>
